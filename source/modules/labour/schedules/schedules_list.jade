table.table.hs-table.table-condensed.table-responsive.hours-table.widget(style='font-size: 12px;')
    thead
        tr
            th.t-center ID
            th.t-center Week Start
            th.t-center BOH/FOH
            th.t-center Hours
            th.t-center Added
            th.t-center Updated
            th.t-center Print
            th.t-center Print Buzz Sheets
            th.t-center Edit
            th.t-center View
            
    tbody
        for schedule in schedules
            tr(data-id=schedule.getId())
                td.b-right= schedule.getId()
                td.b-right= formatter.formatDate(schedule.getStartDate(), "EEE, MMM dd, yyyy")
                td.b-right= schedule.isBoh() ? 'BOH' : 'FOH'
                td.b-right= schedule.getHours()
                td.b-right= formatter.formatTimestamp(schedule.getAdded(), "EEE, MMM dd, yyyy")
                td.b-right= formatter.formatTimestamp(schedule.getUpdated(), "EEE, MMM dd, yyyy")
                td.b-right
                    i.fa.fa-print.vis-link#print-schedule
                if schedule.isBoh()
                    td.b-right
                        i.fa.fa-print.vis-link#print-buzz-sheets
                else
                    td.b-right N/A
                td.b-right
                    i.fa.fa-edit.vis-link#edit-schedule
                td
                    i.fa.fa-clipboard.vis-link#view-schedule
