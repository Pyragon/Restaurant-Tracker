table.table.hs-table.table-condensed.table-responsive.hours-table.widget(style='font-size: 12px;')
    thead
        tr
            th.t-center Name
            th.t-center Bill Name
            th.t-center Price
            th.t-center Cost to Make
            th.t-center Added
            th.t-center Edit
    tbody
        for item in recipeitems
            tr(data-id=item.getId())
                td.b-right= item.getName()
                td.b-right= item.getBillName()
                td.b-right= numUtils.formatNumber(item.getPrice())
                td.b-right= numUtils.formatNumber(item.getCost())
                td.b-right= formatter.formatTimestamp(item.getAdded(), 'EEE, MMM dd, YYYY')
                td
                    i.vis-link.fa.fa-edit.edit-recipe-item
