table.table.hs-table.table-condensed.table-responsive.hours-table.widget(style='font-size: 12px;')
    thead
        tr
            th.t-center Date
            th.t-center Employee
            th.t-center FOH Hours
            th.t-center BOH Hours
            th.t-center End Time
            th.t-center Break
            th.t-center Total Hours
            th.t-center Total Cost
            th.t-center Last Updated
            th.t-center Edit
    tbody
        for hours in hourdata
            tr(data-id=hours.getId())
                td.b-right= hours.getId()
                td.b-right= hours.getEmployeeName()
                td.b-right= formatter.formatDate(hours.getDate(), 'EEE, MMM dd, YYYY')
                td.b-right= formatter.formatTimestamp(hours.getStartTime(), 'h:mm a')
                td.b-right= formatter.formatTimestamp(hours.getEndTime(), 'h:mm a')
                td.b-right= hours.getBreakLength() == 0 ? 'None' : hours.getBreakLength()+' min'
                td.b-right= hours.getTotalHours()
                td.b-right= numUtils.formatNumber(hours.getTotalHours() * hours.getWage())
                td.b-right= formatter.formatTimestamp(hours.getLastUpdated(), 'MMM dd, YYYY h:mm a')
                td
                    i.vis-link.fa.fa-edit.edit-hours
