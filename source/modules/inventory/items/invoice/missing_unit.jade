div.noty_message
    span.noty_text
    div.widget.register(style='margin-top: 5px;')
        div.report_line.modal-input-array(data-key="units")
            input.first.name#unit(type='text', data-name='unit-name', placeholder='Unit Name', value=unitName ? unitName : '')
            input.second.value#quantity(type='text', data-name='unit-quant', placeholder='Quantity')
        div(style='clear: both;')
div.noty_close
