table.table.hs-table.table-condensed.table-responsive.employees-table.widget(style='font-size: 12px;')
    thead
        tr
            th.t-center ID
            th.t-center Name
            th.t-center Start Date
            if archive
                th.t-center End Date
            th.t-center Default Role
            th.t-center Last Updated
            th.t-center Edit
            th.t-center Add Hours
    tbody
        for employee in employees
            tr(data-id=employee.getId())
                td.b-right= employee.getId()
                td.b-right= employee.getFullName()
                td.b-right= formatter.formatTimestamp(employee.getStartDate(), 'EEEE, MMM dd, YYYY')
                if archive
                    td.b-right= formatter.formatTimestamp(employee.getEndDate(), 'EEEE, MMM dd, YYYY')
                td.b-right= roles.getName(employee.getDefaultRole())
                td.b-right= formatter.formatTimestamp(employee.getLastUpdated(), 'MMM dd, YYYY h:mm a')
                td.b-right
                    i.vis-link.fa.fa-edit.edit-employee
                td
                    i.vis-link.fa.fa-clipboard.add-hours
