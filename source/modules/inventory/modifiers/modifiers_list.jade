table.table.hs-table.table-condensed.table-responsive.hours-table.widget(style='font-size: 12px;')
    thead
        tr
            th.t-center Name
            th.t-center Price
            th.t-center Cost to Make
            th.t-center Added
            th.t-center Edit
            th.t-center View
    tbody
        for modifier in modifiers
            tr(data-id=modifier.getId())
                td.b-right= modifier.getName()
                td.b-right= numUtils.formatNumber(modifier.getPrice())
                td.b-right= numUtils.formatNumber(modifier.getCost())
                td.b-right= formatter.formatTimestamp(modifier.getAdded(), 'EEE, MMM dd, YYYY')
                td.b-right
                    i.vis-link.fa.fa-edit.edit-modifier
                td
                    i.vis-link.fa.fa-clipboard.view-modifier
